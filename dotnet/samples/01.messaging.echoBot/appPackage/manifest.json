{
    "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "name": {
        "short": "MSAP Engineering Copilot${{APP_NAME_SUFFIX}}",
        "full": "MSAP Engineering Copilot${{APP_NAME_SUFFIX}}"
    },
    "description": {
        "short": "Copilot Bot for MicrosoftAds Platform engineers.",
        "full": "Copilot Bot for MicrosoftAds Platform engineers in live site engineering and development purposes, with knowledge of past incidents, Troubleshooting Guides and codebase."
    },
    "developer": {
        "name": "Microsoft Internal",
        "mpnId": "",
        "websiteUrl": "https://aka.ms/msap-eng-copilot-website",
        "privacyUrl": "https://aka.ms/msap-eng-copilot-privacy",
        "termsOfUseUrl": "https://aka.ms/msap-eng-copilot-termsOfUse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "personal",
                "team",
                "groupchat"
            ],
            "supportsFiles": true,
            "isNotificationOnly": false,
            "commandLists": [
                {
                    "scopes": [
                        "personal",
                        "team",
                        "groupchat"
                    ],
                    "commands": []
                }
            ]
        }
    ],
    "composeExtensions": [],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "devicePermissions": [
        "notifications",
        "openExternal"
    ],
    "showLoadingIndicator": false,
    "validDomains": [
      "${{BOT_DOMAIN}}"
    ]
}
