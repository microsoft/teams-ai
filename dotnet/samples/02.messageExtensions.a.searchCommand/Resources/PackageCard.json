{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "${name}"
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Scope",
          "value": "${scope}"
        },
        {
          "title": "Version",
          "value": "${version}"
        },
        {
          "title": "Description",
          "value": "${description}"
        },
        {
          "title": "Keywords",
          "value": "${keywords}"
        },
        {
          "title": "Date",
          "value": "${date}"
        },
        {
          "title": "Author",
          "value": "${author}"
        },
        {
          "title": "Publisher",
          "value": "${publisher}"
        },
        {
          "title": "Maintainers",
          "value": "${maintainers}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "NPM",
      "url": "${npmLink}"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Homepage",
      "url": "${homepageLink}"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Repository",
      "url": "${repositoryLink}"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Bugs",
      "url": "${bugsLink}"
    }
  ]
}