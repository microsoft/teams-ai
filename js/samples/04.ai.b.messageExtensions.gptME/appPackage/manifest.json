{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/termofuse",
        "termsOfUseUrl": "https://www.example.com/privacy"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "GPT ME-${{TEAMSFX_ENV}}",
        "full": "GPT Message Extensions"
    },
    "description": {
        "short": "Sample Message Extension to add GPT snippets to posts",
        "full": "Sample Message Extension that lets you add GPT snippets to posts"
    },
    "accentColor": "#FFFFFF",
    "bots": [],
    "composeExtensions": [
        {
            "botId": "${{BOT_ID}}",
            "commands": [
                {
                    "id": "CreatePost",
                    "type": "action",
                    "title": "Create Post",
                    "description": "Use GPT to create a post",
                    "initialRun": true,
                    "fetchTask": true,
                    "context": ["commandBox", "compose"],
                    "taskInfo": {
                        "title": "Create Post",
                        "width": "medium",
                        "height": "medium",
                        "url": "https://teams.microsoft.com"
                    }
                }
            ],
            "canUpdateConfiguration": true
        }
    ],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}