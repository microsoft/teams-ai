        "replace": "~1.2.0",
        "restify": "~11.1.0"
    },
    "devDependencies": {
        "@types/dotenv": "8.2.0",
        "@types/restify": "8.5.7",
        "nodemon": "~3.0.1",
        "typescript": "^5.2.2",
        "ts-node": "^10.9.1"
