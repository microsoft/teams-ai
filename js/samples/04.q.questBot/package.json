{
    "name": "questBot-demo",
    "version": "1.0.0",
    "description": "An epic text adventure powered by AI.",
    "engines": {
        "node": "14 || 16 || 18"
    },
    "author": "Microsoft",
    "license": "MIT",
    "main": "./lib/index.js",
    "scripts": {
        "dev:teamsfx": "env-cmd --silent -f .localConfigs npm run dev",
        "dev": "nodemon --exec node --inspect=9239 --signal SIGINT -r ts-node/register ./src/index.ts",
        "build": "tsc --build && shx cp -r ./src/prompts ./lib/",
        "start": "node ./lib/index.js",
        "watch": "nodemon --exec \"npm run start\"",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com"
    },
    "dependencies": {
        "@microsoft/botbuilder-m365": "^0.1.0-alpha.2",
        "botbuilder": "^4.19.0",
        "botbuilder-azure-blobs": "^4.19.0",
        "restify": "^10.0.0"
    },
    "devDependencies": {
        "@types/node": "^14.0.0",
        "@types/restify": "^8.5.5",
        "env-cmd": "^10.1.0",
        "nodemon": "^2.0.7",
        "shx": "^0.3.3",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    }
}
