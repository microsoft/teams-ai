{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "version": "1.0.0",
    "manifestVersion": "1.16",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.package.name",
    "name": {
        "short": "DM-${{TEAMSFX_ENV}}",
        "full": "DM"
    },
    "developer": {
        "name": "microsoft",
        "mpnId": "",
        "websiteUrl": "https://microsoft.com",
        "privacyUrl": "https://microsoft.com/privacy",
        "termsOfUseUrl": "https://microsoft.com/termsofuse"
    },
    "description": {
        "short": "An epic text adventure powered by AI.",
        "full": "An epic text adventure powered by AI."
    },
    "icons": {
        "outline": "outline.png",
        "color": "color.png"
    },
    "accentColor": "#FFFFFF",
    "staticTabs": [
        {
            "entityId": "conversations",
            "scopes": ["personal"]
        },
        {
            "entityId": "about",
            "scopes": ["personal"]
        }
    ],
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": ["personal", "team", "groupChat"],
            "isNotificationOnly": false,
            "supportsCalling": false,
            "supportsVideo": false,
            "supportsFiles": false
        }
    ],
    "validDomains": [
        "${{BOT_DOMAIN}}"
    ]
}
