{
    "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "version": "1.0.0",
    "manifestVersion": "1.16",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.package.name",
    "name": {
        "short": "AI ME-${{TEAMSFX_ENV}}",
        "full": "AI Message Extensions"
    },
    "developer": {
        "name": "Microsoft Teams",
        "mpnId": "",
        "websiteUrl": "https://teams.microsoft.com",
        "privacyUrl": "https://privacy.microsoft.com/privacystatement",
        "termsOfUseUrl": "https://www.microsoft.com/legal/terms-of-use"
    },
    "description": {
        "short": "Sample Message Extension that lets you add AI snippets to posts ",
        "full": "Sample Message Extension that lets you add AI snippets to posts "
    },
    "icons": {
        "outline": "outline.png",
        "color": "color.png"
    },
    "accentColor": "#FFFFFF",
    "composeExtensions": [
        {
            "botId": "${{BOT_ID}}",
            "commands": [
                {
                    "id": "CreatePost",
                    "type": "action",
                    "title": "Create Post",
                    "description": "Use AI to create a post",
                    "initialRun": true,
                    "fetchTask": true,
                    "context": ["commandBox", "compose"],
                    "taskInfo": {
                        "title": "Create Post",
                        "width": "medium",
                        "height": "medium",
                        "url": "https://teams.microsoft.com"
                    }
                }
            ],
            "canUpdateConfiguration": true
        }
    ],
    "permissions": ["identity", "messageTeamMembers"],
    "validDomains": ["${{BOT_DOMAIN}}"]
}
